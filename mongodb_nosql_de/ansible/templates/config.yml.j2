# Data Pipeline Configuration
# Generated by Ansible

environment: {{ environment }}
mongodb:
  uri: {{ mongodb_uri }}
  database: data_pipeline
  collections:
    facts: transactions_fact
    dimensions: products_dim
    aggregates: daily_aggregates

pipeline:
  batch_size: {{ pipeline_batch_size | default(1000) }}
  workers: {{ pipeline_workers | default(2) }}
  source:
    type: csv
    path: {{ source_data_path | default('/opt/data-pipeline/data/source') }}

logging:
  level: {{ log_level | default('INFO') }}
  file: /var/log/pipeline/pipeline.log
  max_bytes: 10485760
  backup_count: 5

data_quality:
  enabled: true
  strict_mode: {{ data_quality_strict | default(false) }}
  thresholds:
    completeness: 0.95
    accuracy: 0.90
    uniqueness: 0.99
